{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "target": "ES2019",
    "strict": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./typeings/*.d.ts"
  ],
  "exclude": [
    "*/node_modules",
    "*/lib",
    "*/dist"
  ]
}
